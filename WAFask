    <script>
            let conttime = document.getElementById("conttime");
            let autoText = document.getElementById("autoText");
            let contval = 5;

            if (document.documentElement.offsetWidth < 500) {
                autoText.innerText = "我们正在检查您的浏览器\n（这个过程是自动的）";
            }
            setInterval(function () {
                if (contval <= 0) {
                    return;
                }
                contval--;
                conttime.innerText = "请等待" + contval + "秒";
            }, 1000)
    </script>
